<div class="title">
<h1>Jack's Cocktails</h1>
</div>

<div class="main-container">

  <% @cocktails.each do |cocktail| %>
    <div class="card-holder">
      <div class="cocktail-card" style="background-image: url(<%= image_path 'cocktail2.jpg' %>)">
        <div class="cocktail-info">
          <%= link_to cocktail.name, cocktail, class: "cocktail-text" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


